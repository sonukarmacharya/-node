<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <table>
      <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Emp type</th>
      <th>Hourly Rate</th>
      <th>Total hour</th>
      </tr>
     
        <% records.forEach(function(row){%>
        <tr>
          <td><%= row.name %></td>
          <td><%= row.email%></td>
          <td><%= row.etype%></td>
          <td><%= row.hourlyrate%></td>
          <td><%=  row.totalHour%></td>
         
        </tr>
        <%})%>
    </table><br><br><br>
    <form action="/" method="POST">
      <label><h1>Employee Form</h1></label><br>
      Name:<input type="text" name="name"><br><br>
      Email:<input type="text" name="email"><br><br>
      type:<input type="text" name="type"><br><br>
      hourlyrate:<input type="text" name="hrate"><br><br>
      totalHour:<input type="text" name="thour"><br><br>
      <input type="submit" value="submit" name="submit">
    </form>
  </body>
</html>
